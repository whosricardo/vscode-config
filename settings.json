{
    // --- Editor Settings ---
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 17,
    "editor.lineHeight": 1.8,
    "editor.rulers": [80, 120],
    "editor.renderLineHighlight": "gutter",
    "editor.fontLigatures": true,
    "editor.inlineSuggest.enabled": false, // VocÃª definiu como false
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.minimap.enabled": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "workbench.editor.labelFormat": "short",
    "workbench.sideBar.location": "right",
    "workbench.activityBar.location": "hidden",
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "compact",
    "window.commandCenter": false,
    "breadcrumbs.enabled": false,
    "symbols.hidesExplorerArrows": false,
    "chat.commandCenter.enabled": false,
    "update.mode": "manual", // Consider "default" for automatic updates

    // --- Terminal Settings ---
    "terminal.integrated.fontFamily": "Iosevka Term",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.lineHeight": 1.3,

    // --- File Explorer Settings ---
    "explorer.compactFolders": false,
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    },

    // --- Language-Specific Settings & Formatters ---
    "[python]": {
        "editor.formatOnType": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode" // Prettier is generally for web languages, consider Python formatters like Black or autopep8
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "diffEditor.ignoreTrimWhitespace": true
    },

    // --- Code Runner Settings ---
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.saveAllFilesBeforeRun": true,

    // --- Language & Tool Paths ---
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "C_Cpp.default.compilerPath": "/usr/bin/clang",
    "java.jdt.ls.java.home": "/opt/homebrew/opt/openjdk/libexec/openjdk.jdk/Contents/Home",
    "omnisharp.monoPath": "/Library/Frameworks/Mono.framework/Versions/Current",
    "omnisharp.useModernNet": false, // Consider setting to true if using .NET 6+

    // --- CMake & Makefile Settings ---
    "cmake.configureOnOpen": true,
    "makefile.configureOnOpen": true,

    // --- Extension-Specific Settings ---
    "github.copilot.enable": {
        "*": false, // Disables Copilot globally
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "python": false,
        "html": false,
        "javascript": false,
        "java": false,
        "cpp": false,
        "ini": false,
        "javascriptreact": false,
        "c": false,
        "csharp": false
    },
    "liveServer.settings.donotShowInfoMsg": true,
    "redhat.telemetry.enabled": false, // Red Hat extensions often have telemetry

    // --- APC (Advanced Power Customize) Settings ---
    "custom-ui-style.font.sansSerif": "JetBrains Mono",
    "custom-ui-style.stylesheet": {
        ".title-label > h2": "display: none;",
        ".pane-body": "padding: 8px",
        ".pane-header": "padding: 0 8px"
    },
    "custom-ui-style.header": {
        "height": 36
    },
    "custom-ui-style.electron": {
        // "opacity": 0.95,
        // "transparent": true,
        // "backgroundColor": "#00000000",
        // "vibrancy": "ultra-dark"
    },
    "workbench.colorTheme": "Noctis Sereno",
    "workbench.iconTheme": "flow-dark"
}